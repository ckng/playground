{
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"postcss src/styles.css -o public/css/styles.css --watch\"  \"live-server ./public\"",
    "dev": "cross-env NODE_ENV=development postcss src/styles.css -o public/css/styles.css",
    "development": "npm run dev",
    "prod": "cross-env NODE_ENV=production postcss src/styles.css -o public/css/styles.css",
    "production": "npm run prod",
    "start": "npm run serve"
  },
  "dependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^9.8.0",
    "tailwindcss": "^1.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss-cli": "^7.1.1",
    "postcss-easy-import": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1"
  }
}
